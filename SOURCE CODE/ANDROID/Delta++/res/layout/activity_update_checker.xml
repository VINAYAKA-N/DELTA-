<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UpdateChecker" 
    android:background="@drawable/src">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.87" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="DELTA generated a patch as a delta difference 
between the applicationâ€™s old and new APK ver-sions. The bsdiff delta encoding tool produces 
this delta patch in the server, and the bspatch 
tool deploys the patch in the smartphone. DELTA 
works generally like Google Smart Application 
Update in that both use delta encoding and nei-ther unpacks the APK. DELTA++improves on 
both methods by decompressing the APK and 
exploiting its specic structure. The result is a 
much smaller patch."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/upt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="App Name"
        android:textColor="@color/DeepOrange"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/update"
        android:background="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check for Update"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/Graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Click for Graph" 
        android:background="@color/White"/>

</LinearLayout>
    </ScrollView>
</LinearLayout>