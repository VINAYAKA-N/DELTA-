            android:name="com.example.delta.MainActivity"
            android:label="@string/app_name" >
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.delta.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.example.delta.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.delta.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.delta.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name="com.example.delta.ApkListActivity"
            android:label="@string/title_activity_apk_list" >
             
        </activity>
        <activity
            android:name="com.example.delta.UpdateChecker"
            android:label="@string/title_activity_update_checker" >
